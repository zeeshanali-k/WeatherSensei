<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/solo_widget_layout"
    android:padding="@dimen/widget_margin">

    <LinearLayout
        android:id="@+id/solo_widget_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#483A3B3A"
        android:orientation="vertical"
        />

    <TextView
        android:id="@+id/solo_widget_temp_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:textColor="@color/colorPrimaryDark"
        android:text="--"
        android:padding="2dp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-black"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="5dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/solo_widget_temp_unit"
        android:layout_alignTop="@id/solo_widget_temp_tv"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:text="Â°C"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_toEndOf="@id/solo_widget_temp_tv"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/solo_widget_min_max_temp_tv"
        android:layout_below="@id/solo_widget_temp_tv"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="__-__"
        android:textColor="@color/colorPrimaryDark"
        android:padding="2dp"
        android:textStyle="bold"
        android:textSize="17sp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/solo_widget_time_tv"
        android:textSize="20sp"
        android:text="--:-- --"
        android:textStyle="bold"
        android:layout_below="@id/solo_widget_min_max_temp_tv"
        android:layout_centerHorizontal="true"
        android:padding="2dp"
        android:gravity="center"
        android:textColor="@color/colorPrimaryDark"
        />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/weather_sensei_icon"
        android:layout_alignTop="@id/solo_widget_temp_tv"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_alignBottom="@id/solo_widget_min_max_temp_tv"
        android:id="@+id/solo_widget_weather_cond_img"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/solo_widget_weather_cond_tv"
        android:textSize="20sp"
        android:text="-----"
        android:textStyle="bold"
        android:layout_below="@id/solo_widget_weather_cond_img"
        android:layout_alignStart="@id/solo_widget_weather_cond_img"
        android:padding="2dp"
        android:gravity="center"
        android:textColor="@color/colorPrimaryDark"
        />
</RelativeLayout>